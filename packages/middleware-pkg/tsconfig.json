{
  "compilerOptions": {
    "outDir": "lib/",
    "strict": true,
    "target": "ES2019",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es2018"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "preserve",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib/"]
}
